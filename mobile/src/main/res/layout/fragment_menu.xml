<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/skypeButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_skype"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_album" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textStyle="bold"
            android:textSize="@dimen/menu_text_size"
            android:gravity="center_horizontal"
            android:text="@string/menu_skype"
            android:textColor="@color/menu_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/albumButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_album"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_album" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textStyle="bold"
            android:textSize="@dimen/menu_text_size"
            android:gravity="center_horizontal"
            android:text="@string/menu_album"
            android:textColor="@color/menu_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/newPhotosButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_new_photos"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:paddingTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_fotos_nuevas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textStyle="bold"
            android:textSize="@dimen/menu_text_size"
            android:gravity="center_horizontal"
            android:text="@string/menu_new_photos"
            android:textColor="@color/menu_text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sendMessageButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_send_message"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_enviar_mensaje" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textStyle="bold"
            android:textSize="@dimen/menu_text_size"
            android:gravity="center_horizontal"
            android:text="@string/menu_send_message"
            android:textColor="@color/menu_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/newMessagesButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_new_messages"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mensajes_nuevos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textStyle="bold"
            android:textSize="@dimen/menu_text_size"
            android:gravity="center_horizontal"
            android:text="@string/menu_new_messages"
            android:textColor="@color/menu_text_color" />
    </LinearLayout>
</LinearLayout>