<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/buttonPrincipal</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>

    <style name="WindowTitleBackground" parent="AppTheme">
        <item name="android:background">@color/titleBackground</item>
        <item name="android:colorBackground">@color/titleBackground</item>
    </style>

    <style name="buttonArrow" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColorLink">@color/buttonPrincipal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">60sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="buttonAlbum" parent="buttonArrow">
        <item name="android:textColor">@color/background_album_active</item>
    </style>

    <style name="buttonAlbum2" parent="buttonArrow">
        <item name="android:textColor">@color/background_new_photos_active</item>
    </style>
</resources>
